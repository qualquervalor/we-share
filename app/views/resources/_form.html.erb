<%= form_for [@user, @resource] do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this <%= RESOURCE_NAME_SINGULAR %> from being saved:</h2>
      <ul>
        <% @resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :picture %><br>
    <div class="upload-preview polaroid user-profile-img">
      <div class = "imgLiquid imgLiquidFill" style="width:220px; height:220px;">
        <%= image_tag @resource.picture_url(:medium)%>
      </div>
    </div>
    <%= f.file_field :picture, class:"file"%>
  </div>

  <div class="clearfix"></div>
  
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"form-control" %>
  </div>
  <br>

  <div class="clearfix"></div>

  <!-- <div class="actions"> -->

  <div class="row button-row">

    <div class="col-sm-4">
      <div class="sign-in-button">
        <%= f.submit "Add", class:"btn btn-large btn-success" %>         
      </div>
    </div>

    <div class="col-sm-4">
      <div class="sign-in-button">
        <%= link_to 'Back', resources_path, class:"btn btn-large btn-warning"%>
      </div>
    </div>         
  </div>

  <!-- </div> -->
  
<% end %>
