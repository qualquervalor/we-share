<h1>Listing resources</h1>

  <div class="row">
    <div class="large-2 columns">
      <p><%= image_tag @user.picture.url(:thumb) %></p>
      <p><%= @user.name %></p>
      <p><%= link_to "My Stuff", user_path(@user)%></p>
      <p><%= link_to "Requests Received", user_path(@user)%></p>
      <p><%= link_to "Borrowed Stuff", user_path(@user)%></p>
      <p><%= link_to "Requests Made", user_path(@user)%></p>
      <p><%= link_to "All Users", users_path%></p>
    </div>
    <div class="large-10 columns">

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Picture</th>
    <!--       
          <th></th>
          <th></th>
          <th></th> -->
        </tr>
      </thead>

      <tbody>
        <% @resources.each do |resource| %>
          <tr>
            <td><%= resource.name %></td>
            <td><%= resource.description %></td>
            <td><%= image_tag resource.picture.url(:thumb) %></td>
    <!-- 
            <td><%#= link_to 'Show', resource %></td>
            <td><%#= link_to 'Edit', edit_resource_path(resource) %></td>
            <td><%#= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
             -->
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

<div class="resource-wall"></div>

<div id="templates">

  <script class="resource" type="text/template">

    <a href="/resources/{{ id }}">
      <div class="resource-div">
        <img src={{ picture }} />
        <br>
        <b>{{ name }} </b>
        <b>{{ distance }} miles </b>
      </div>
    </a>

  </script>

</div>

<% content_for :javascript do %>
  <script type="text/javascript">

    var wall = new ResourceWall([], {
      url: '/resources'
    });
    
    var wallView = new ResourceWallView({
      collection: wall,
      el: '.resource-wall'
    });

<% @resources.each do |x| %>
 
  <% miles = x.get_distance(User.find(x.user_id), current_user)[:distance] %>
    wall.add(<%= raw x.to_json({distance: miles}) %>);
<% end %>
  </script>
<% end %>
