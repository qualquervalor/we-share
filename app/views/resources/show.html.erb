<div id="contact" class="section">
  <div class="fixed-wrapper">
    <h1>Resource</h1>
  </div>
  <div class="container"> 
    <div class="container block">
      <div class="row">
        <div class="col-4-md">
          <div class="expanded">
            <%= image_tag @resource.picture.url(:medium), class:"expanded pull left" %>
          </div>
        </div>
        <div class="col-6-md">
          <div class="resc-exp-desc">
            <h3><%= @resource.name %></h3>
            <h4>Description:</h4>
            <div>
              <%= @resource.description %>
            </div>
            <h4>Owner:</h4>
            <div>
              <%= link_to @resource.user.name, user_path(@resource.user) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if current_user == @resource.user %>
        <%= link_to 'Edit', edit_user_resource_path(:user_id => current_user.id), class:"btn btn-large btn-danger" %>
    <% else %>
      <% if @resource.already_associated_with_borrower?( current_user) %>
          <%= link_to 'Check Status', edit_borrow_path(resource: @resource.id), class:"btn btn-large btn-warning" %>
      <% else %>
          <%= link_to 'Request to borrow!', new_borrow_path(resource: @resource.id), class:"btn btn-large btn-success" %>
      <% end %>
    <% end %>

    <div class="button">
      <%= link_to 'Back', resources_path, class:"btn btn-large btn-warning" %>
    </div>
  </div>
</div>
