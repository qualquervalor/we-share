<!-- This same formatting is used for new session -->
<div class="full-width-row sign_in">
  <div class="row">
    <div class="col-lg-3 col-sm-1"></div>
    <div class="col-lg-6 col-sm-10">
      <h2 class="home_title"><%= APP_NAME %></h2>
      <h2>Sign up</h2>

      <%= render "shared/error_messages" %>
      
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
        <div class="form-group">
          <%= f.text_field :name, placeholder:"Name" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, :autofocus => true, placeholder: "Email" %>
        </div>
      
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
        </div>

        <div class="form-group">
          <br>
          <h4 id="location_details"><%= APP_NAME %> uses your location to provide the distance of <%= RESOURCE_NAME_PLURAL %> to you.</h4>
        </div>

        <div class="form-group">
          <%= f.text_field :street, placeholder:"Street Address" %>
        </div>

        <div class="form-group">
          <%= f.text_field :city, placeholder:"City" %>
        </div>

        <div class="form-group">
          <%= f.text_field :state, placeholder:"State" %>
        </div>

        <div class="form-group">
          <%= f.text_field :zipcode, placeholder:"Zipcode" %>
        </div>
      
        <div class="btn-div">
          <%= f.submit "Sign up", class:"btn btn-large btn-success" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-lg-3 col-sm-1"></div>
  </div>
</div>
