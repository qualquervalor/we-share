<!-- This same formatting is used for new session -->
<div class="full-width-row shed-bg">
  <div class="row">
    <div class="large-4 medium-6 small-10 small-centered columns white-overlay">
      <h2>Sign up</h2>

      <%= render "shared/error_messages" %>
      
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
        <div>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div>
          <%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true %>
        </div>
      
        <div>
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>
      
        <div>
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %>
        </div>

        <div>
          <%= f.label :street %><br>
          <%= f.text_field :street %>
        </div>
        <div>
          <%= f.label :city %><br>
          <%= f.text_field :city %>
        </div>
        <div>
          <%= f.label :zipcode %><br>
          <%= f.text_field :zipcode %>
        </div>
        <div>
          <%= f.label :state %><br>
          <%= f.text_field :state %>
        </div>
      
        <div>
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
