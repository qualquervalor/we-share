<!-- This same formatting is used for new registration -->
<div class="full-width-row sign_in">
  <div class="row">
    <div class="col-lg-3 col-sm-1"></div>
    <div class="col-lg-6 col-md-8 col-sm-10 style="padding: 15px;">
      <h2 class="home_title"><%= APP_NAME %></h2>
      
      <h2>Sign in</h2>

      <%= render "shared/error_messages" %>
      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, :autofocus => true, placeholder: "Email" %>
          <%#= f.label :email %><br />
        </div>
  
        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password" %>
          <%#= f.label :password %><br />
        </div>
  
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.label :remember_me, class:"remember_me" %>
            <%= f.check_box :remember_me %> 
          </div>
        <% end -%>
  
        <div class="btn-div">
          <%= f.submit "Sign in", class: "btn btn-large btn-success" %>
        </div>
      <% end %>
  
      <%= render "devise/shared/links" %>

      <div class="col-lg-3 col-sm-1"></div>
  </div>
</div>