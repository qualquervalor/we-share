<div class="section">
  <div class="fixed-wrapper"><h1>The Neighborhood</h1></div>
  <div class="container" style="margin-top: 0">
    <div class="content">
      <div class="row">

        <!-- User Index Section -->
        <div id="team" class="section">

        <!--   
          <div class="fixed-wrapper">
            <h1>User Listing</h1>
          </div>
         -->
          <div class="container">   
            <div class="content">
              <div class="row">

                <div class="user-wall">         
                </div>

              </div>          
            </div>
          </div><!-- /.container -->
        </div>
      </div>
    </div>
  </div>
</div>


<div id="templates">
  <script class="user" type="text/template">

    <div class="col-md-4 col-sm-4 col-xs-12">
      <div class="team-portrait block">   
        <div class="title">
          <div class="name"> 
            <h2>{{ name }}</h2>
          </div>
        </div>           
        <div class="portrait">
          <a href="/users/{{ id }}">
            <img class="resource-pic" src={{ picture }} />                                 
          </a>
        </div>

        <div class="distance-away">
          <b>{{ distance }} miles away</b>
        </div>

      </div>
    </div>

  </script>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">

    var wall = new UserWall([], { url: '/users' });   
    var wallView = new UserWallView({
      collection: wall,
      el: '.user-wall'
    });

    <% @users.each do |x| %> 
      <% if x != current_user %> 
        wall.add(<%= raw x.to_json({distance: @distances[x.id]}) %>);
      <% end %>
    <% end %>
  </script>
<% end %>

