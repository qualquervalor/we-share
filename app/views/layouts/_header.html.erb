        <li><%= link_to "SIGN UP", new_user_registration_path %></li>
        <li><%= fa_link_to 'sign-in', "SIGN IN", new_user_session_path %></li>
      <% end %>
    </ul>
  </div><!--/.nav-collapse -->
</div>

<div class="search">
  <i class="icon-search"></i>
